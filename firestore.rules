rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default: allow authenticated users to read/write their own data
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Mini Apps: anyone can read, only admin (cloud functions) can write
    match /mini_apps/{appId} {
      allow read: if true;
      allow write: if false; 
    }
  }
}
